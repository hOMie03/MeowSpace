{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.AspNetCore": "Trace",
            "System": "Error"
        }
    },
    "ConnectionStrings": {
        "MeowSpaceDBConnString": "Server = DESKTOP-03V0C0B;Database = MeowSpaceDB;Trusted_Connection = True;TrustServerCertificate=True;"
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },

        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Information",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                }
            }
        ]
    }
}
